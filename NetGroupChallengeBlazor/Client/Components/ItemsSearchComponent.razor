@using Microsoft.AspNetCore.WebUtilities
@using DTOModels
@using NetGroupChallengeBlazor.Client.Components.FormComponents
@inject NavigationManager NavManager

<EditForm Model="@ItemFilter">

    <InputBoxComponent PropertyName="Title">
        <InputText @bind-Value=ItemFilter.Title class="form-control" id="Title" />
    </InputBoxComponent>

    <InputBoxComponent PropertyName="Storage Title">
        <InputText @bind-Value=ItemFilter.StorageTitle class="form-control" id="StorageTitle" />
    </InputBoxComponent>

    <InputBoxComponent PropertyName="SerialNumber">
        <InputText @bind-Value=ItemFilter.SerialNumber class="form-control" id="SerialNumber" />
    </InputBoxComponent>

    <InputBoxComponent PropertyName="Classification">
        <InputText @bind-Value=ItemFilter.Classification class="form-control" id="Classification" />
    </InputBoxComponent>

    <InputBoxComponent PropertyName="Item Owner">
        <InputText @bind-Value=ItemFilter.ItemOwner class="form-control" id="ItemOwner" />
    </InputBoxComponent>

    <InputBoxComponent PropertyName="Weight">
        <InputNumber @bind-Value=ItemFilter.Weight class="form-control" id="Weight" />
    </InputBoxComponent>
    
    <InputBoxComponent PropertyName="Length">
        <InputNumber @bind-Value=ItemFilter.Length class="form-control" id="Length" />
    </InputBoxComponent>

    <InputBoxComponent PropertyName="Width">
        <InputNumber @bind-Value=ItemFilter.Width class="form-control" id="Width" />
    </InputBoxComponent>

    <InputBoxComponent PropertyName="Height">
        <InputNumber @bind-Value=ItemFilter.Height class="form-control" id="Height" />
    </InputBoxComponent>
</EditForm>

@code {
    [Parameter]
    public ItemFilterDTO ItemFilter { get; set; } = new ItemFilterDTO();

}
